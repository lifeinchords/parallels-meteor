{
  "manifest_version": 2,
  "name": "__MSG_appName__",
  "description": "__MSG_appDescription__",
  "version": "0.5",
  "default_locale": "en",
  "background": {
    "page": "html/background.html"
  },

  "browser_action": {
    "default_icon": "images/notification--paper-clip.png"
  },

  "content_scripts": [
    {
      "matches": [ "http://*/*", "https://*/*", "ftp://*/*" ],
      "js": [
        "bower_components/requirejs/require.js",
        "scripts/lib/requireContent.js",
        "scripts/lib/requireConfig.js",
        "scripts/lib/htmlParser/content/main.js"
      ],
      "run_at" : "document_start",
      "all_frames" : true
    },
    {
      "matches": [ "http://*/*", "https://*/*" ],
      "css": [
        "styles/vendor/jquery.tag-editor.css",
        "styles/compiled/jquery.tag.override.css",
        "styles/compiled/main.css"
      ],
      "js": [
        "scripts/content.js",
        "scripts/testHelpers/inject.testHelper.js"
      ],
      "run_at": "document_end",
      "all_frames": false
    }
  ],

  "web_accessible_resources": [
    "images/*",
    "typefaces/*",
    "html/*",
    "scripts/*",
    "bower_components/*"
  ],

  "permissions": [
    "notifications",
    "storage",
    "unlimitedStorage",
    "tabs",
    "activeTab",
    "http://*/*",
    "https://*/*"
  ]
}
